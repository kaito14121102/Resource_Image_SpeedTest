<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:id="@+id/layout_item_cross"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    >
    <TextView
        android:id="@+id/txt_label"
        android:background="#FFC107"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AD"
        android:textSize="@dimen/_8sdp"
        android:padding="@dimen/_1sdp"
        android:textColor="@color/black" />
    <ImageView
        android:padding="@dimen/_4sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/img_adchoice"
        android:src="@drawable/ic_adchoice"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"/>
    <LinearLayout
        android:layout_below="@id/img_adchoice"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_1sdp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_icon_app"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_5sdp">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:text=""
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtSponsored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Sponsored"
                    android:textColor="#969696"
                    android:textSize="10sp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#353534"
                        android:text="Sponsored"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutHeader"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/screen1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_165sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
                <ImageView
                    android:id="@+id/screen2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_165sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
                <ImageView
                    android:id="@+id/screen3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_165sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_6sdp"
            android:id="@+id/layoutFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtsociety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Get it on Google Play"
                    android:textColor="#969696"
                    android:textSize="10sp"/>
                <TextView
                    android:paddingLeft="@dimen/_8sdp"
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    />
            </LinearLayout>
            <Button
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/btn_install"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Install Now"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@drawable/bg_button_install_splash"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>